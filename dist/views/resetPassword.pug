extends base 

block content
  main.main
    .resetPassword-form
      h2.heading-secondary.ma-bt-lg Reset your password
      form.form.form--reset-password#get-token(data-token=`${token}`)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password',autocomplete="on", placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password-confirm') Confirm Password
          input#password-confirm.form__input(type='password',autocomplete="on", placeholder='••••••••', required, minlength='8')          
        .form__group
          button.btn.btn--green Reset Password