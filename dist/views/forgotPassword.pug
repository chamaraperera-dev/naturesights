extend base
block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Forgot your password?
      p.login-form__text Please enter your email address and we will send you a link to reset your password
      form.form.form--forgot-password
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', autocomplete="on",placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green Reset Password
